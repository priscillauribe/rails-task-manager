<%= form_with model: task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title%>
    <%= f.label :details %>
    <%= f.text_area :details %>
  <% unless f.object.new_record? %>
      <label>
        <%= f.check_box :completed %> Completed
      </label>
  <% end %>
  <%= f.submit %>
<% end %>
